<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
tools:context=".ChatActivity1"
android:layout_height="match_parent"
android:layout_width="match_parent"
android:orientation="vertical"
    android:background="#181818">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:textColor="#EDA071"
        android:textColorHint="#EDA071"
        android:layout_height="50dp"
        android:layout_width="320dp"
        android:hint="message"
        android:textSize="20dp"
        android:id="@+id/msgEdt" />
    <Button
        android:textStyle="bold"
        android:textColor="#EDA071"
        android:backgroundTint="#533B2D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/sendBtn" />
</LinearLayout>



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="600dp">

    <TextView
        android:textColor="#EDA071"
        android:textColorHint="#EDA071"
        android:id="@+id/tx1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="The Conversation will appear here:\n"
        android:textSize="20dp" />
</ScrollView>

<Button
    android:textStyle="bold"
    android:textColor="#EDA071"
    android:backgroundTint="#533B2D"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:text="Back to Main"
    android:id="@+id/backMainBtn" />


</androidx.appcompat.widget.LinearLayoutCompat>